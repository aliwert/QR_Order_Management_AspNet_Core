@model UpdateNotificationDto
@{
    ViewData["Title"] = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Notification Transactions</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Update Notification</div>
                        </div>
                        <input type="hidden" asp-for="NotificationId" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Type">Notification Type</label>
                                <input type="text" class="form-control" asp-for="Type" id="Type" placeholder="Type">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Icon">Notification Icon</label>
                                <input type="text" class="form-control" asp-for="Icon" id="Icon" placeholder="Icon">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Notification Description</label>
                                <input type="text" class="form-control" asp-for="Description" id="Description" placeholder="Description">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Update Notification</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

