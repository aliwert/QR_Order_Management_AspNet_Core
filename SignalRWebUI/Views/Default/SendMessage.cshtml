@model CreateMessageDto
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Contact Us
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form method="post" asp-action="SendMessage" asp-controller="Default">
                        <div>
                            <input type="text" class="form-control" placeholder="Your Name Surname" asp-for="NameSurname" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Your Phone Number" asp-for="Phone" />
                        </div>
                        <div>
                            <input type="email" class="form-control" placeholder="Your Email" asp-for="Mail" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Subject" asp-for="Subject" />
                        </div>
                        <div>
                            <textarea placeholder="You can write your message..." asp-for="MessageContent" rows="8" class="form-control"></textarea>
                        </div>
                        <div class="btn_box">
                            <button>
                                Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <div id="googleMap"></div>
                </div>
            </div>
        </div>
    </div>
</section>