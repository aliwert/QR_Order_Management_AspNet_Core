@model List<SignalRWebUI.Dtos.CategoryDtos.ResultCategoryDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Category Transactions</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Category List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform transactions related to the category from below
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Category Name</th>
									<th scope="col">Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var x in Model){
									count++;
									<tr>
									<th>@count</th>
									<td>@x.Name</td>
									<td>@x.Status</td>
										<td><a href="/Category/DeleteCategory/@x.CategoryID" class="btn btn-outline-danger">Delete</a></td>
										<td><a href="/Category/UpdateCategory/@x.CategoryID" class="btn btn-outline-success">Update</a></td>

								</tr>
								}
							</tbody>
						</table>
						<a href="/Category/CreateCategory/" class="btn btn-outline-primary">Add New Category</a>
					</div>
				</div>




			</div>

		</div>
	</div>
</div>