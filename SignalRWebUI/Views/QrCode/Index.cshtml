@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">QR Code Transactions</h4>
        <div class="row">
            <div class="col-md-12">

                <form method="post">
                    <input type="text" name="value" />
                    <input type="submit" value="Create QR Code" class="btn btn-warning" />
                </form>

                @if (ViewBag.QrCodeImage != null)
                {
                    <img src="@ViewBag.QrCodeImage" alt="" style="width:400px; height:400px" />
                }
            </div>
        </div>
    </div>
</div>
