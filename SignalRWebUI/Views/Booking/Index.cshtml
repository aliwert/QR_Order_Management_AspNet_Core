@model List<ResultBookingDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Reservation Transactions</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Reservation List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform transactions related to the reservation from below
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Name Surname</th>
									<th scope="col">Phone Number</th>
									<th scope="col">Body Count</th>
									<th scope="col">Reservation Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var x in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@x.Name</td>
										<td>@x.Phone</td>
										<td>@x.PersonCount</td>
										<td>Reservation Received</td>
										<td><a href="/Booking/DeleteBooking/@x.BookingID" class="btn btn-outline-danger">Delete</a></td>
										<td><a href="/Booking/UpdateBooking/@x.BookingID" class="btn btn-outline-success">Update</a></td>

									</tr>
								}
							</tbody>
						</table>
						<a href="/Booking/CreateBooking/" class="btn btn-outline-primary">Add New Reservation</a>
					</div>
				</div>




			</div>

		</div>
	</div>
</div>

