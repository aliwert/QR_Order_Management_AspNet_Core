@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Product Transactions</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Product Uptade Page</div>
                        </div>
                        <input type="hidden" asp-for="ProductID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="productname">Enter Product Name</label>
                                <input type="text" class="form-control" asp-for="ProductName" id="productname" placeholder="Enter Product Name">
                            </div>
                            <div class="form-group">
                                <label for="price">Enter Product Price</label>
                                <input type="text" class="form-control" asp-for="Price" id="price" placeholder="Enter Product Price">
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Enter Product Image URL</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="imageurl" placeholder="Enter Product Image URL">
                            </div>
                            <div class="form-group">
                                <label for="category">Choose Product Category</label>
                                @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control", id = "category" })
                            </div>
                            <div class="form-group">
                                <label for="description">Enter Product Description</label>
                                <textarea class="form-control" asp-for="Description" id="description" placeholder="Enter Product Description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Add Product</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


