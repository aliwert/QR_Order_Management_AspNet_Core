@model List<ResultProductDto> // viewimports file
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Product Operations</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Product List</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can perform operations related to the product from below
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var x in Model)
                                {
                                    <tr>
                                        <td>@x.ProductID</td>
                                        <td>@x.ProductName</td>
                                        <td>@x.Price</td>
                                        <td>@x.Name</td>
                                        <td>@x.ProductStatus</td>

                                        <td><a href="/Product/DeleteProduct/@x.ProductID" class="btn btn-danger btn-border btn-round">Delete</a></td>
                                        <td><a href="/Product/UpdateProduct/@x.ProductID" class="btn btn-success btn-border btn-round">Update</a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Product/CreateProduct/" class="btn btn-outline-primary">Add New Product</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
