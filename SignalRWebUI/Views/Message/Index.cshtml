@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")
<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarComponentPartial")

    <section class="food_section layout_padding">
        <div class="container">

            <div class="container mt-5">
                <div class="row">
                    <div class="col-12">
                        <h3 class="text-center mb-4">AliWert Restaurant Momentary Message</h3>
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-2">Your Username: </div>
                    <div class="col-5">
                        <input type="text" id="userinput" class="form-control" />
                    </div>
                </div>
                <br />

                <div class="row p-1">
                    <div class="col-2">Your Message: </div>
                    <div class="col-5">
                        <input type="type" class="form-control" id="messageinput" />
                    </div>
                </div>
                <br />

                <div class="row p-1">
                    <div class="col-2"></div>
                    <div class="col-3">
                        <input type="button" id="sendbutton" value="Send Message" class="btn btn-primary" />
                    </div>
                </div>
                <div class="row p-1">
                    <div class="col-12">
                        <hr />
                    </div>
                </div>

                <div class="row p-1">
                    <div class="col-12">
                        <ul id="messagelist" class="list-group"></ul>
                    </div>
                </div>
            </div>

        </div>
    </section>

    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")
    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")
</body>

</html>
